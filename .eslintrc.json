{
  "extends": ["standard", "standard-jsx"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
	"settings": {
		"react": { "pragma": "createElement" }
  },
  "rules": {
    "react/jsx-closing-tag-location": "off"
  }
}
